{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "@app/jsonapi": [
        "libs/jsonapi/src"
      ],
      "@app/jsonapi/*": [
        "libs/jsonapi/src/*"
      ],
      "@app/json-api-test": [
        "libs/json-api-test/src"
      ],
      "@app/json-api-test/*": [
        "libs/json-api-test/src/*"
      ],
      "@app/json-api": [
        "libs/json-api/src"
      ],
      "@app/json-api/*": [
        "libs/json-api/src/*"
      ]
    }
  }
}